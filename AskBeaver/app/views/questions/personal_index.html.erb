<br>
<div class="container">
  <!-- Preguntas -->
  <div class="hero-unit">

  <h1> Preguntas Personales</h1>
</div>


  <table class="table table-bordered table-striped">
    <thead>
      <colgroup>
      <col class="span5">
      <col class="span5">
      <col class="span1">
    </colgroup>
      <tr>
        <th>Titulo</th>
        <th>Contenido</th>
        <th></th>
      </tr>
    </thead>

  <tbody>
  <% @questions.each do |question| %>
    <tr>
      <td id="title"><%= question.title %></td>
      <td><%= question.content %></td>
      <td><%= link_to 'Show', question, :style=>'color:#000' %></td>

    </tr>
  <% end %>
</tbody>
  </table>

  <br />

  <% if current_user.user_type == "NormalUser" %>
    <%= link_to 'Nueva pregunta', new_question_path , :class=>"btn btn-primary", :style=>'color:#FFF' %>
  <% end %>
</div>
