<ul id="nav">
    <li><a href="#signup">Sign Up</a></li>
    <li><a href="#login">Log In</a></li>
</ul>

<p id="notice"><%= notice %></p>

<div id="questions">
  <p>
    <b>Title:</b>
    <%= @question.title %>
  </p>

  <p>
    <b>Content:</b>
    <%= @question.content %>
  </p>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
</div>

<!-- COMENTARIOS CORRESPONDIENTES A UNA PREGUNTA -->

<div id="comments">
  <h4>Comments</h4>
  <% @question.comment_questions.each do |comment| %>
    <p>
      <!--   <b>Comment:</b>-->
      <%= comment.content %>
    </p> 
  <% end %>

<!-- CREACION DE UN NUEVO COMENTARIO -->


  <h4>Add a comment:</h4>
  <%= form_for([@question, @question.comment_questions.build]) do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_field :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>

<!-- RESPUESTAS -->

<div id="answers">
  <h2>Answers</h2>
  <% @question.answers.each do |answer| %>
    <p>
      <b>Answer:</b>
      <%= answer.content %>
    </p>  
    <p>
    <%= link_to 'Destroy Answer', [answer.question, answer],
                 :confirm => 'Are you sure?',
                 :method => :delete %>
    </p>


<!-- COMENTARIOS CORRESPONDIENTES A UNA RESPUESTA -->


<h3>Comments</h3>
<% answer.comment_answers.each do |comment| %>
  <p>
    <b>Comment:</b>
    <%= comment.content %>
  </p> 
<% end %>


<!-- CREACION DE UN NUEVO COMENTARIO -->


<h3>Add a comment:</h3>
<%= form_for([@question, answer, answer.comment_answers.build]) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
  <% end %>


<!-- CREACION DE UNA NUEVA RESPUESTA -->

   <h2>Add a answer:</h2>
  <%= form_for([@question, @question.answers.build]) do |f| %>
    <div class="field">
      <%= f.label :content %><br />
      <%= f.text_field :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>
